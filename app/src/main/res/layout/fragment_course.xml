<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.juice.timetable.ui.course.MySwipeRefreshLayout
        android:id="@+id/sl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.course.CourseFragment">

            <TextView
                android:id="@+id/tv_check_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ec6b6b"
                android:gravity="center"
                android:text="@string/new_version_dialog_title_course"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </com.juice.timetable.ui.course.MySwipeRefreshLayout>


</layout>